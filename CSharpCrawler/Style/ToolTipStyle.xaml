<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ToolTip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="ToolTip">
                    <Border Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource AccentBlueColor}">
                        <Grid  Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity=".3"></DropShadowEffect>
                            </Grid.Effect>

                            <TextBlock Text="{TemplateBinding ContentControl.Content}" TextWrapping="Wrap" LineHeight="20"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>